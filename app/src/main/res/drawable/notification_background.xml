<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Color de fondo -->
    <solid android:color="@color/notification_background" />

    <!-- Bordes redondeados -->
    <corners android:radius="8dp" />

    <!-- Borde sutil -->
    <stroke
        android:width="1dp"
        android:color="@color/notification_background" />

    <!-- Padding interno -->
    <padding
        android:left="16dp"
        android:top="12dp"
        android:right="16dp"
        android:bottom="12dp" />

</shape>